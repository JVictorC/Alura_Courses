<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormularioAlunoActivity"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/activity_formalumario_aluno_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:hint="Nome" />

    <EditText
        android:id="@+id/activity_formalumario_aluno_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:inputType="phone"
        android:ems="10"
        android:hint="Telefone" />

    <EditText
        android:id="@+id/activity_formalumario_aluno_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email" />


    <Button
        android:id="@+id/activity_formalumario_aluno_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Salvar" />

</LinearLayout>